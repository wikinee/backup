// 将设置放入此文件中以覆盖默认设置
{
    "editor.fontSize": 16,
    "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
    "clang.cflags": [
        "-std=c89",
        //Mac
        "-I/usr/local/include",
        "-I/usr/local/include/glib-2.0/",
        "-I/usr/local/Cellar/glib/2.50.2/lib/glib-2.0/include",
        "-I/usr/local/include/gtk-3.0/",
        //Linux

        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "clang.cxxflags": [
        "-std=c++11",
        "-Wall",
        //Mac
        "-I/usr/local/include/glib-2.0/",
        "-I/usr/local/Cellar/glib/2.50.2/lib/glib-2.0/include",
        "-I/usr/local/include/gtk-3.0/",

        //Linux

        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ]
}