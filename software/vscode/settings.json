// 将设置放入此文件中以覆盖默认设置
{
    "files.autoSave": "onFocusChange",
    "editor.fontSize": 15,
    "editor.tabSize": 4,
    "editor.fontFamily": "Monaco",
    "editor.wordWrap": "off",
    // "editor.wrappingColumn": 80,
    // "editor.formatOnSave": true,
    "clang-format.executable": "/usr/bin/clang-format-8",
    "clang.executable": "/usr/bin/clang-8",
    "clang-format.style": "file",
    "clang.cflags": [
        // All
        "-std=c89",
        //Linux
        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "clang.cxxflags": [
        // All
        "-std=c++11",
        "-Wall",
        //Linux
        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "editor.rulers": [
        80,
        100
    ],
    "files.associations": {
        "*.am": "makefile"
    },
    "editor.renderWhitespace": "boundary",
    "editor.trimAutoWhitespace": true,
    "editor.renderIndentGuides": false,
    "diffEditor.ignoreTrimWhitespace": true,
    // "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "c-cpp-flylint.clang.executable": "clang-8",
    "c-cpp-flylint.cppcheck.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#ff0000"
    }
}
