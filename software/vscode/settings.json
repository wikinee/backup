// 将设置放入此文件中以覆盖默认设置
{
    "files.autoSave": "onFocusChange",
    "editor.fontSize": 15,
    "editor.tabSize": 4,
    "editor.fontFamily": "'Monaco', 'MicrosoftYaHei'",
    "editor.wordWrap": "off",
    // "editor.wrappingColumn": 80,
    // "editor.formatOnSave": true,
    "clang-format.executable": "/usr/bin/clang-format-7",
    "clang.executable": "/usr/bin/clang-7",
    "clang-format.style": "file",
    "clang.cflags": [
        "-std=gnu11",
    ],
    "clang.cxxflags": [
        // All
        "-std=c++11",
        "-Wall",
        //Linux
        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "editor.rulers": [
        80,
        100
    ],
    "files.associations": {
        "*.am": "makefile"
    },
    "editor.renderWhitespace": "boundary",
    "editor.trimAutoWhitespace": true,
    "editor.renderIndentGuides": false,
    "diffEditor.ignoreTrimWhitespace": true,
    // "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#ff0000"
    },
    "cmake.configureOnOpen": true,
    "workbench.colorTheme": "Xcode Default (Light)",
    "git.confirmSync": false,
    "python.formatting.provider": "autopep8",
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.linting.pylintUseMinimalCheckers": true,
    "typescript.referencesCodeLens.enabled": true,
}
