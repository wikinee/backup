// 将设置放入此文件中以覆盖默认设置
{
    "files.autoSave": "onFocusChange",
    "editor.fontSize": 17,
    "editor.tabSize": 4,
    "editor.fontFamily": "Monaco",
    "editor.wordWrap": "off",
    // "editor.wrappingColumn": 80,
    // "editor.formatOnSave": true,
    "clang-format.executable": "/usr/bin/clang-format-3.9",
    "clang.executable": "/usr/bin/clang-3.9",
    "clang-format.style": "file",
    "clang.cflags": [
        // All
        "-std=c89",
        //Linux
        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "clang.cxxflags": [
        // All
        "-std=c++11",
        "-Wall",
        //Linux
        //Public
        "-I${workspaceRoot}/include",
        "-I${cwd}/include",
        "-I${env.ENVIROMENT_VARIABLE}/include"
    ],
    "editor.rulers": [
        80,
        100
    ],
    "files.associations": {
        "*.am": "makefile"
    },
    "workbench.colorTheme": "Gruvbox Dark (Medium Contrast)",
    "editor.renderWhitespace": "boundary",
    "editor.trimAutoWhitespace": true,
    "workbench.iconTheme": "vscode-icons",
    "editor.renderIndentGuides": false
}